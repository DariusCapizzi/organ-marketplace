<div class="row">
  {{#each model as |organ|}}
    {{organ-tile organ=organ}}
  {{/each}}
</div>

{{#if isShowForm}}
    <form class="newOrgan">

      <label for="content">organ name: </label><br>
      {{input value=organ-name}}
      <br>
      <label for="cost">how much you want for it: </label>
      {{input value=cost}}
      <br>
      <label for="description">description: </label>
      {{input value=description}}

      <button type="button" {{action 'submitOrgan'}}>Submit</button>
    </form>

{{else}}
  <button type="button" {{action 'showForm'}}>new ORGAN</button>
{{/if}}
